extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 
include ../../mixins/item.pug 
include ../../mixins/pagination.pug 

block main 
    .container 
        .row
            +box-head(pageTitle)

        .row 
            if(songs.length > 0)
                .col-md-8.col-12
                    table.table.table-hover
                        thead
                            tr.text-center
                                th(scope='col') STT
                                th(scope='col') Tên 
                                th(scope='col') Hình ảnh
                                th(scope='col') Ca sĩ 
                                th(scope='col') Lượt nghe 
                        
                        tbody
                            each song, index in songs 
                                tr.text-center.align-middle    
                                    td #{index + 1}
                                    td.fw-bold #{song.title}
                                    td 
                                        img(src=song.avatar alt=song.title class="img-thumbnail" style="width: 75px; height: 75px;")
                                    td=song.infoSinger.fullName
                                    td=song.listen
    


