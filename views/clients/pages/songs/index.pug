include ../../mixins/box-head.pug 
include ../../mixins/alert.pug 
include ../../mixins/carousel.pug 
include ../../mixins/item.pug 
include ../../mixins/pagination.pug 

block main 
    .container 
        +alertSuccess(3000)
        
        .row
            +box-head(pageTitle)

        .row 
            if(songs.length > 0)
                each song in songs
                    .col-lg-3.col-md-6.col-12 
                        +song-item(song)

                .mt-4.d-flex.justify-content-center                            
                    +pagination(pagination)
            else  
                p Không có bài hát nào
    
    script(src="/clients/js/pagination.js") 

