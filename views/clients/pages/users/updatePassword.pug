extends ../../layouts/default.pug 
include ../../mixins/alert.pug 
include ../../mixins/box-head.pug 

block main 
    +alertSuccess("3000")
    .container 
        .row 
            .col-md-3.col-12
                include ../../partials/profile-sider.pug
            
            .col-md-9.col-12
                form(
                    action="/users/updatePassword?_method=PATCH"
                    method="post"
                    id="form-update-password"
                    style="width: 80%;"
                    class="mx-auto"
                ) 
                    h5(
                        style="color: rgb(13,110,253);"
                    ) #{pageTitle}

                    .mb-1.row.form-group
                        label.col-12.col-form-label.fw-bold(for='oldPassword') Mật khẩu cũ
                        .col-12
                            input(
                                class="form-control" 
                                type='password' 
                                name="oldPassword" 
                                id="oldPassword" 
                                placeholder="Nhập mật khẩu cũ"
                            )
                            p.error-msg

                    .mb-1.row.form-group
                        label.col-12.col-form-label.fw-bold(for='password') Mật khẩu
                        .col-12
                            input(
                                class="form-control" 
                                type='password' 
                                name="password" 
                                id="password" 
                                placeholder="Nhập mật khẩu"
                            )
                            p.error-msg

                    .mb-1.row.form-group
                        label.col-12.col-form-label.fw-bold(for='confirmPassword') Xác nhận mật khẩu
                        .col-12
                            input(
                                class="form-control" 
                                type='password' 
                                name="confirmPassword" 
                                id="confirmPassword" 
                                placeholder="Xác nhận mật khẩu"
                            )
                            p.error-msg
                            
                    .row.mt-3.form-group.px-2 
                        button.btn.btn-primary(type='submit' style="width: 200px;") Lưu thay đổi
                    
    script(src="/clients/js/validator.js")
                    
