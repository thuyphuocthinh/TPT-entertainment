extends ../../../layouts/default.pug
include ../../../mixins/box-head.pug 
include ../../../mixins/image-upload.pug 
include ../../../mixins/alert.pug

block main
    if (role.permissions.includes("singers-create"))
        .container 
            +box-head(pageTitle)
            include ../../../partials/require.pug

            +alertSuccess(3000)

            form(
                action=`${prefixAdmin}/interfaces/carousels/create`
                method="POST"
                enctype="multipart/form-data"
                id="form-create-carousels"
            )
                .row.my-3
                    .col-md-2.col-12
                        +image-upload("image")
                    .col-md-10.col-12
                        .preview-image

                .my-3 
                    button(type="submit" class="btn btn-secondary" btn-create) Tạo mới

        script(src="admin/js/upload-image.js") 
        script(src="admin/js/validator.js") 



        

